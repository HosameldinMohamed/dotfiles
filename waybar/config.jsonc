    "group/group-power": {
        "orientation": "inherit",
        "drawer": {
            "transition-duration": 500,
            "children-class": "not-power",
            "transition-left-to-right": false,
        },
        "modules": [
            "clock", // First element is the "group leader" and won't ever be hidden
            "idle_inhibitor",
            "custom/updates",
            "backlight",
            "custom/lock",
            "custom/power",
        ]
    },

    "hyprland/language": {
        "format": "{}",
