[button:logout]
label = Logout
icon = /path/to/logout-icon.png
command = swaymsg exit

[button:shutdown]
label = Shutdown
icon = /path/to/shutdown-icon.png
command = systemctl poweroff

[button:reboot]
label = Reboot
icon = /path/to/reboot-icon.png
command = systemctl reboot

[button:lock]
label = Lock
icon = /path/to/lock-icon.png
command = swaylock

[button:sleep]
label = Sleep
icon = /path/to/sleep-icon.png
command = systemctl suspend

[button:cancel]
label = Cancel
icon = /path/to/cancel-icon.png
command = pkill wlogout
